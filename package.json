    "babel-preset-stage-3": "^6.24.1",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "path": "^0.12.7",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "style-loader": "^0.21.0",
    "webpack": "^4.8.2",
    "webpack-cli": "^2.1.3"
  },
  "devDependencies": {
    "babel-jest": "^23.4.2",
    "eslint": "^5.3.0",
